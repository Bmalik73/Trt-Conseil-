{% extends 'base.html.twig' %}

{% block title %}CONNEXION :: TRT Conseil{% endblock %}

{% block body %}

    <div class="w-100">
        <div class="middle-window position-absolute top-50 start-50 p-4 text-center translate-middle">
            <img class="small-logo mb-2" src="{{ asset('images/logo.png') }}" alt="Logo">
            <form method="post">
                {% if error %}
                    <div class="mt-3 alert alert-danger">Veuillez vérifier vos identifiants</div>
                {% endif %}

                {% if app.user %}
                    <div class="mt-3 alert alert-success">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}<br><a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <h2 class="mb-3 font-weight-normal">CONNEXION</h2>
                <label for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="mt-2" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mt-3 mb-4">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>

                <button class="btn btn-primary button-shadow me-2" type="submit">
                    Se connecter
                </button>
                <a class="btn btn-light button-shadow ms-2" href="{{ path('app_home') }}" role="button">Retour</a>
            </form>
        </div>
    </div>
    
{% endblock %}
