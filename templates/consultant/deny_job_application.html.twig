{% extends 'base.html.twig' %}

{% block title %}CONSULTANT :: TRT Conseil{% endblock %}

{% block body %}

  {{ include('parts/_header.html.twig') }}

  <div class="large-center-wrapper mb-5">
    <div class="page-title-wrapper">
        <h2>CONSULTANT</h2>
    </div>

    <div class="inner-center-wrapper">
      <h3>Candidature supprimée</h3>
      <div class="alert alert-success text-center mt-3">
        La candidature de {{ jobApplication.candidate.firstName }} {{ jobApplication.candidate.lastName }} pour l'offre d'emploi intitulée {{ jobApplication.jobOffer.title }} a bien été supprimée. Elle ne sera pas visible par le recruteur.
      </div>
      <a class="btn btn-primary button-shadow mt-3" href="{{ path('app_consultant') }}" role="button">Retour</a>
    </div>
  </div>

{% endblock %}